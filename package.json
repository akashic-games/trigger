{
  "name": "@akashic/trigger",
  "version": "1.0.0",
  "description": "An event emitting module for TypeScript",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "clean": "rimraf -r lib/ && rimraf -r spec/lib",
    "build": "npm run build:src",
    "build:test": "tsc -p spec/src/",
    "build:src": "tsc -p src/",
    "lint": "npm run lint:src && npm run lint:test && npm run lint:md",
    "lint:test": "tslint spec/src/*.ts -p spec/src/tsconfig.json --type-check",
    "lint:src": "tslint src/*.ts -p src/tsconfig.json --type-check",
    "lint:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ./.remarkrc",
    "jasmine": "istanbul cover node_modules/jasmine/bin/jasmine.js",
    "test": "npm run build && npm run build:test && npm run jasmine && npm run lint"
  },
  "files": [
    "lib",
    "README.md",
    "package.json"
  ],
  "keywords": [],
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/trigger.git"
  },
  "devDependencies": {
    "@types/jasmine": "3.5.0",
    "istanbul": "~0.4.5",
    "jasmine": "~3.5.0",
    "remark-cli": "~7.0.1",
    "remark-lint": "~6.0.5",
    "rimraf": "^3.0.0",
    "tslint": "~5.20.1",
    "typescript": "~3.7.4"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
