{
  "name": "@akashic/trigger",
  "version": "2.0.1",
  "description": "An event emitting module for TypeScript",
  "type": "module",
  "types": "lib/index.d.ts",
  "main": "./dist/cjs/index.cjs",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "scripts": {
    "prepare": "npm run clean && npm run build",
    "clean": "rimraf lib/ dist/",
    "build": "npm run clean && run-s build:*",
    "build:tsc": "tsc",
    "build:bundle": "rollup -c",
    "test": "run-s test:*",
    "test:jest": "jest --config jest.config.js",
    "test:lint": "run-s test:lint:*",
    "test:lint:ts": "eslint src/**/*.ts --fix",
    "test:lint:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ./.remarkrc"
  },
  "files": [
    "lib",
    "dist",
    "README.md",
    "package.json"
  ],
  "keywords": [],
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/trigger.git"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@akashic/eslint-config": "^2.0.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^12.0.0",
    "remark-lint": "^9.1.2",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
