{
  "name": "@akashic/trigger",
  "version": "2.1.3",
  "description": "An event emitting module for TypeScript",
  "type": "commonjs",
  "types": "./dist/esm/index.d.ts",
  "main": "./lib/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "./lib/*": {
      "import": {
        "types": "./dist/esm/*.d.ts",
        "default": "./dist/esm/*"
      },
      "require": {
        "types": "./lib/*.d.ts",
        "default": "./lib/*"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepare": "npm run clean && npm run build",
    "clean": "rimraf lib/ dist/",
    "build": "npm run clean && run-s build:*",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "test": "run-s test:*",
    "test:jest": "jest --config jest.config.mjs",
    "test:lint": "run-s test:lint:*",
    "test:lint:ts": "eslint src/**/*.ts --fix",
    "test:lint:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ./.remarkrc"
  },
  "files": [
    "lib",
    "dist",
    "README.md",
    "package.json"
  ],
  "keywords": [],
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/trigger.git"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@akashic/eslint-config": "^3.0.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.0",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^12.0.0",
    "remark-lint": "^10.0.0",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.2.2"
  }
}
